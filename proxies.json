{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "StaticIndex": {
            "matchCondition": {
                "route": "/",
                "methods": [
                    "GET",
                    "HEAD",
                    "OPTIONS"
                ]
            },
            "backendUri": "http://%ACOMPANHO_STATIC%/index.html"
        },
        "categoriesProxy": {
            "matchCondition": {
                "route": "/api/categories",
                "methods": [
                    "GET",
                    "HEAD",
                    "POST",
                    "OPTIONS"
                ]
            },
            "backendUri": "http://acompanho.azurewebsites.net/api/categories"
        },
        "categoryProxy": {
            "matchCondition": {
                "route": "/api/categories/{id}",
                "methods": [
                    "GET",
                    "HEAD",
                    "OPTIONS",
                    "PUT"
                ]
            },
            "backendUri": "http://acompanho.azurewebsites.net/api/categories?id={id}"
        },
        "feedsProxy": {
            "matchCondition": {
                "route": "/api/categories/{categoryId}/feeds",
                "methods": [
                    "GET",
                    "HEAD",
                    "POST",
                    "OPTIONS"
                ]
            },
            "backendUri": "http://acompanho.azurewebsites.net/api/feeds?categoryId={categoryId}"
        },
        "feedProxy": {
            "matchCondition": {
                "route": "/api/categories/{categoryId}/feeds/{id}",
                "methods": [
                    "GET",
                    "HEAD",
                    "OPTIONS",
                    "PUT"
                ]
            },
            "backendUri": "http://acompanho.azurewebsites.net/api/feeds?id={id}&categoryId={categoryId}"
        }
    }
}